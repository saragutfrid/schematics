{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Schematic",
        "program": "${workspaceFolder}/node_modules/@angular/cli/lib/init.js",
        "args": ["generate", "my-lib:c", "--name=component"],
        "autoAttachChildProcesses": true,
        "sourceMaps": true,
        "skipFiles": ["<node_internals>/**"],
        "outFiles": ["${workspaceFolder}/dist/**/*.js"]
      }
    ]
  }
  